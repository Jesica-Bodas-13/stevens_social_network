<div class="container postContainer">
    <!-- Content here -->
    <div class="row">
        <div class="col">
            <h1 class="h2 mb-0 postTitle bold">{{postDetails.title}}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p class="description">{{postDetails.description}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Posted By: {{postDetails.createdBy.0.firstName}} {{postDetails.createdBy.0.lastName}}
        </div>
    </div>
    <div class="row">
        <div class="col">
            Posted Date: {{postDetails.createdAt}}
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2 class="h6 mb-0">Comments: {{postDetails.totalComments}}</h2>
        </div>
        <div class="col">

        </div>
        <div class="col">

        </div>
        <div class="col">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add
                Comment</button>
        </div>

    </div>
    {{#each postDetails.comments}}
    <div class="row">
        <div class="col">
            <div class="chatContainer">
                <img src="/public/images/profiles/{{this.commentBy.0.profileUrl}}" alt="Avatar">
                <h2 class="h6 mb-0">{{this.commentBy.0.firstName}} {{this.commentBy.0.lastName}}</h2>
                <p>{{this.comment}}</p>
                <span class="time-right">{{this.commentDate}}</span>
            </div>
        </div>
    </div>
    {{/each}}
