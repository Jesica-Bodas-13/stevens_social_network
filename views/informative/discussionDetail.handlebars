<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title h5 mb-0" id="exampleModalLabel">Add New Comment Here</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="errors"></div>
                <form id="comment-form" method="POST">
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Comment:</label>
                        <textarea class="form-control" name="comment" id="message-text"></textarea>
                    </div>

                    <button type="submit" id="submit-comment" class="btn btn-primary">Comment</button>
                </form>
            </div>
        </div>
    </div>
