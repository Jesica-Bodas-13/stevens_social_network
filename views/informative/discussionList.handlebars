<div class="row">
    <!--Aside Section-->
    <div class="col-12  col-xl-3">
        <aside>
            <div class="row">
                <div class="col-12 col-sm-6 col-xl-12">
                    <div class="card mb-3 mb-sm-0 mb-xl-3">
                        <div class="card-body">
                            <form id="search-form">
                                <label id="searchLabel" class="search-form" for="searchDiscussion">
                                    <input placeholder="Search a keyword here..." type="text" name="searchDiscussion"
                                        id="searchDiscussion" />
                                </label>

                            </form>
                        </div>
                        <div class=" card-footer">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="true" name="flexRadioDefault"
                                    id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    My Discussion
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" value="false" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault2" checked>
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Show All Discussion
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h4 card-title centerHead bold">Start Discussion</h1>
                            <div class="errors">
                                {{#if errors}}
                                <div class="alert alert-danger alert-dismissible" role="alert">' {{errors}}
                                    '<button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button></div>
                                {{/if}}
                            </div>
                            <form id="post-form" action="/informative/create" method="POST">
                                <div class="mb-3">
                                    <label for="title" class="form-label">Title</label>
                                    <input class="form-control" id="title" name="title" type="text"
                                        placeholder="Discussion Title" aria-label="Title">
                                </div>
                                <div class="mb-3">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea class="form-control" id="description" name="description"
                                        rows="5"></textarea>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" id="postSubmit" class="btn btn-primary mb-3">POST</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
    </div>
    <!--Table Section-->
    <div class="col-12 col-xl-9">
        <h1 class="h4 category mb-0 p-4 rounded-top text-light bold centerHead">Discussions</h1>
        <table class="table table-striped table-bordered table-responsive">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="forum-col">Discussions Topic</th>
                    <th scope="col">Comments</th>
                    <th scope="col" class="last-post-col">Created By</th>
                </tr>
            </thead>
            <tbody class="table-body">
                {{!-- {{#each posts}}
                <tr class="clickRow" id="{{this._id}}" data-href="/informative/{{this._id}}">
                    <td>
                        <h2 class="h6 mb-0"><a href="/informative/post">{{this.title}}</a></h2>
                        <p class="mb-0">{{this.description}}</p>
                    </td>
                    <td>{{this.totalComments}}</td>
                    <td>

                        <div> By {{this.createdBy.0.firstName}} {{this.createdBy.0.lastName}}</div>
                        <div> {{this.createdAt}}</div>
                    </td>
                </tr>
                {{/each}} --}}
            </tbody>
        </table>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous">
    </script>
<script src="/public/js/discussionList.js"></script>