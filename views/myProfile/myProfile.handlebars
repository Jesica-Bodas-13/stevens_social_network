
<div class="container">
    <div class="main-body">
        <div class="row">
            <form id="my-profile-form" action="/myProfile" method="POST" enctype="multipart/form-data">
                <div class="col-lg-4">
                    <div id = "card" class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="/public/images/profiles/{{studentPostData.profileUrl}}" alt="Admin"
                                    class="rounded-circle p-1 bg-primary" width="187">
                                <div class="mt-3">
                                    <h2>{{studentPostData.firstName}} {{studentPostData.lastName}}</h2>
                                    <p class="text-secondary mb-1">{{studentPostData.email}}</p>
                                    <p class="text-muted font-size-sm">{{studentPostData.phoneNumber}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div id = "card" class="card">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="{{studentPostData.firstName}}" required />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Last Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="{{studentPostData.lastName}}" required />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email ID</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="{{studentPostData.email}}" required />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone Number</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="{{studentPostData.phoneNumber}}" /required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <input id="editBtn" type="button" class="btn btn-primary px-4" value="Edit Profile" />
                                    <input id="saveBtn" type="button" class="btn btn-primary px-4" value="Save Changes" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous">
    </script>
<script src="/public/js/myProfile.js"></script>