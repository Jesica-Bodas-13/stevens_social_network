<!DOCTYPE html>
<html lang="en">

<head>
  <title>Sign Up</title>
  <link rel="stylesheet" href="/public/css/style.css" />
</head>

<body>
  <div class="signup-box">
    <h1>Sign Up</h1>
    {{#if hasErrors}}
    <div class="alert">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <strong>{{errors}}</strong>
    </div>
    {{/if}}
    <form id="signup-form" action="/signup" method="POST" enctype="multipart/form-data">
      <label>First Name</label>
      <input type="text" id="firstName" name="firstName" placeholder="First Name" value="{{studentPostData.firstName}}"
        required />

      <label>Last Name</label>
      <input type="text" id="lastName" name="lastName" placeholder="Last Name" value="{{studentPostData.lastName}}"
        required />

      <label>Email</label>
      <input type="email" id="email" name="email" placeholder="Stevens Email" value="{{studentPostData.email}}"
        required />

      <label>Password</label>
      <input type="password" id="password" name="password" placeholder="Password" value="{{studentPostData.password}}"
        required />

      <label>Confirm Password</label>
      <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Enter Password Again" value=""
        required />

      <label>Phone Number</label>
      <input type="phonenumber" id="phoneNumber" name="phoneNumber" placeholder="Phone Number"
        value="{{studentPostData.phoneNumber}}" required />

      <label>Upload Profile Picture</label>
      <input type="file" id="profileUrl" name="profileUrl" placeholder="Profile Picture" capture />

      <button type="submit">Submit</button>
    </form>
  </div>
  <p class="para-2">
    Already have an account? <a href="/">Login here</a>
  </p>
</body>

</html>