<div class="login-box">
  <h1 class="centerHead bold">Login</h1>


  <div class="errors">
    {{#if errors}}
    {{errors}}
    {{/if}}
  </div>

  <form id="login-form" action="/login" method="POST">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" placeholder="Stevens Email" value='{{email}}' required />

    <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="Password" value='' required />

    <button id="submitButton" class="buttonRegister" type="submit">Submit</button>

  </form>
</div>
<p class="para-2">
  Not have an account? <a href="/signup">Sign Up Here</a>
</p>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous">
  </script>
<script src="/public/js/login.js"></script>